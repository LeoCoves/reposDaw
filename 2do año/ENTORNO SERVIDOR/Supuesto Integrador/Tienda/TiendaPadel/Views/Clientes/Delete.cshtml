@model TiendaPadel.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="text-center">
    <h1><i class="bi bi-trash"></i> Eliminar</h1>
    <h3>Estas seguro de que quieres eliminarlo?</h3>
</div>


<div class="card bg-dark p-5 my-4 text-light">
    <div class="card-body row g-3 d-flex justify-content-center text-center">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Poblacion)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Poblacion)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoPostal)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoPostal)
        </div>
    </div>
    <div class="card-footer d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group col-4">
                <a asp-action="Index" class="btn btn-outline-danger">Volver</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>