@model IEnumerable<TiendaPadel.Models.ViewUsuarioConRol>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center my-3">
    <h1>Usuarios</h1>
</div>

<div class="card bg-dark my-5 p-3">
    <div class="card-body d-flex text-center justify-content-around">
        <a class="btn btn-success my-3" asp-action="Create">Nuevo Administrador <i class="bi bi-plus-lg"></i></a>
    </div>
</div>

<table class="table table-striped">
    <tr class="bg-dark text-light">
        <th>
            Usuario
        </th>
        <th>
            Nombre de Usuario
        </th>
        <th>
            Rol
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelIdtem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelIdtem => item.RolDeUsuario)
            </td>
        </tr>
    }
</table>