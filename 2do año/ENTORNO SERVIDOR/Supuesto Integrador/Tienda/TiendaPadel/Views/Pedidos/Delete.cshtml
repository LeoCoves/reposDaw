@model TiendaPadel.Models.Pedido

@{
    ViewData["Title"] = "Eliminar";
}

<div class="text-center">
    <h1><i class="bi bi-trash"></i> Eliminar</h1>
    <h3>Estas seguro de que quieres eliminarlo?</h3>
</div>


<div class="card bg-dark p-5 my-4 text-light">
    <div class="card-body row g-3 d-flex justify-content-center text-center">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Confirmado)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preparado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Preparado)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enviado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Enviado)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cobrado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Cobrado)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Devuelto)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Devuelto)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anulado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Anulado)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Estado.Descripcion)
        </div>
    </div>
    <div class="card-footer d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group col-4">
                <a asp-action="Index" class="btn btn-outline-danger">Volver</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>