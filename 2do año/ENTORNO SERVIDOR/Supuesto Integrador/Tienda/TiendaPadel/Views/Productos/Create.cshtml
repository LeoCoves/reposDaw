@model TiendaPadel.Models.Producto

@{
    ViewData["Title"] = "Crear";
}

<div class="text-center">
    <h1><i class="bi bi-box-seam"></i> Crear Producto</h1>
</div>

<div class="card bg-dark p-5 my-4">
    <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-8">
            <label asp-for="Descripcion" class="form-label text-light"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="col-sm-4">
                <label asp-for="PrecioCadena" class="form-label text-light"></label>
                <input asp-for="PrecioCadena" class="form-control" />
                <span asp-validation-for="PrecioCadena" class="text-danger"></span>
            </div>
            <div class="col-12">
            <label asp-for="Texto" class="form-label text-light"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            @*
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            *@
            
            <div class="col-md-3">
            <label asp-for="Stock" class="form-label text-light"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        <div class="col-md-3">
            <label asp-for="Escaparate" class="form-label text-light"></label>
            <div class="form-check form-switch">
                <input asp-for="Escaparate" class="form-check-input" type="checkbox" id="flexSwitchCheckEscaparate" />
                <label class="form-check-label" for="flexSwitchCheckEscaparate">Mostrar en escaparate</label>
            </div>
            <span asp-validation-for="Escaparate" class="text-danger"></span>
        </div>

            @*<div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>*@
            <div class="col-md-3">
            <label asp-for="CategoriaId" class="form-label text-light"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
        <div class="row my-4 d-flex justify-content-center">
            <div class="btn-group col-4">
                <a class="btn btn-outline-primary" asp-action="Index">Volver</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
