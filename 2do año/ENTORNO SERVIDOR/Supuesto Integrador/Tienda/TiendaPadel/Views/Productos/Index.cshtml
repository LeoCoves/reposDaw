@model IEnumerable<TiendaPadel.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="text-center my-3">
    <h1>Productos</h1>
    <a class="btn btn-outline-success my-3" asp-action="Create">Nuevo Producto</a>
</div>

<table class="table table-striped">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            @*
            <th>
                @Html.DisplayNameFor(model => model.PrecioCadena)
            </th>
            *@
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escaparate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            @*
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCadena)
            </td>
            *@
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Escaparate)
            </td>
            <td>
                    <img class="rounded" src="~/imagenes/@(item.Imagen)" alt="Imagen de @item.Descripcion" height="100" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
                    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-outline-dark" asp-action="CambiarImagen" asp-route-id="@item.Id"><i class="bi bi-images"></i></a>
                    <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-x-lg"></i></a>                    
            </td>
        </tr>
}
    </tbody>
</table>
