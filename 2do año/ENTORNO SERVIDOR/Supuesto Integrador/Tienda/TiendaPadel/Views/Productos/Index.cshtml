@model PaginatedList<TiendaPadel.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="text-center my-3">
    <h1>Productos</h1>
    <a class="btn btn-outline-success my-3" asp-action="Create">Nuevo Producto <i class="bi bi-plus-lg"></i></a>
</div>

<table class="table table-striped">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Texto
            </th>
            <th>
                Precio
            </th>
            @*
            <th>
                @Html.DisplayNameFor(model => model.PrecioCadena)
            </th>
            *@
            <th>
                Stock
            </th>
            <th>
                Escaparate
            </th>
            <th>
                Imagen
            </th>
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            @*
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCadena)
            </td>
            *@
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Escaparate)
            </td>
            <td>
                    <img class="rounded" src="~/imagenes/@(item.Imagen)" alt="Imagen de @item.Descripcion" height="100" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
                    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-outline-dark" asp-action="CambiarImagen" asp-route-id="@item.Id"><i class="bi bi-images"></i></a>
                    <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-x-lg"></i></a>                    
            </td>
        </tr>
}
    </tbody>
</table>

@* Poner botones de página Siguiente y Anterior *@
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="text-center">
    <p>Numero de páginas: @Model.TotalPages</p>
</div>
<div class="btn-group text-center w-20 justify-content-center" role="group">
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-outline-secondary @prevDisabled">
        Anterior
    </a>
    <button class="btn btn-dark text-light">@Model.PageIndex</button>
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-outline-secondary @nextDisabled">
        Siguiente
    </a>
</div>
