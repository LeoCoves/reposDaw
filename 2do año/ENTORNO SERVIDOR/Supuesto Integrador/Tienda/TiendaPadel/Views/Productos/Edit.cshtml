@model TiendaPadel.Models.Producto

@{
    ViewData["Title"] = "Editar";
}

<div class="text-center">
    <h1><i class="bi bi-box-seam"></i> Editar Producto</h1>
</div>

<div class="card bg-dark p-4 my-4">
    <form class="row g-3" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Imagenes" />
        <div class="col-md-8">
            <label asp-for="Descripcion" class="form-label text-light"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PrecioCadena" class="form-label text-light"></label>
            <input asp-for="PrecioCadena" class="form-control" />
            <span asp-validation-for="PrecioCadena" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Texto" class="form-label text-light"></label>
            <input asp-for="Texto" class="form-control" />
            <span asp-validation-for="Texto" class="text-danger"></span>
        </div>
        @*
        <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        *@
        
        <div class="col-md-4">
            <label asp-for="Stock" class="form-label text-light"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Escaparate" class="form-label text-light"></label>
            <div class="form-check form-switch">
                <!-- asp-for conserva la vinculación con la propiedad Escaparate -->
                <input asp-for="Escaparate" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckEscaparate" />
                <label class="form-check-label" for="flexSwitchCheckEscaparate">Mostrar en escaparate</label>
            </div>
            <span asp-validation-for="Escaparate" class="text-danger"></span>
        </div>

        @*
        <div class="form-group">
        <label asp-for="Imagen" class="control-label"></label>
        <input asp-for="Imagen" class="form-control" />
        <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>
        *@
        <div class="col-md-4">
            <label asp-for="Categoria" class="form-label text-light"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
        <div class="row my-4 d-flex justify-content-center">
            <div class="btn-group col-4">
                <a class="btn btn-outline-primary" asp-action="Index">Volver</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
