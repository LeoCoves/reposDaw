@*Se añade codigo para presentar la tabla de detalles maestro detalle*@

@{
    var contador = 0;
}
<div>
    <h4>Detalles del pedido</h4>
    <table class="table border-bottom">
        <tr>
            <th></th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Descuento</th>
            <th></th>
        </tr>
        @if (Model.Detalles != null && Model.Detalles.Any())
        {
            foreach (var item in Model.Detalles)
            {
                <tr>
                    <td>
                        <img src="~/imagenes/@item.Producto.Imagen" width="100" height="100" alt="Imagen de @item.Producto.Descripcion">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descuento)
                    </td>
                    <td>
                        <div class="d-print-none">
                            <a asp-action="Delete" asp-controller="Detalles" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
                contador++;
                <p class="text-center">Número de productos: @contador </p>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No hay detalles disponibles.</td>
            </tr>
        }
    </table>
</div>


@if (Model.Estado.Descripcion == "Pendiente")
{
    <div class=" text-center">
        <a asp-controller="Carrito" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary">Volver a Comprar</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Eliminar</a>
    </div>

}
<div class="d-print-none">
    <a asp-action="Index">Volver</a>
</div>

